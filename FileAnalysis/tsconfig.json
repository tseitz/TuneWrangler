{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs", // es2015 not supported by ts-node
    "baseUrl": "src",
    "outDir": "../output",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "classic",
    "experimentalDecorators": true,
    // "noUnusedLocals": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "es7"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}